<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body class="bg-gray-50">
    <!-- If user is logged in, show greeting and logout (optional) -->
    <% if (locals.user) { %>
    <div class="max-w-4xl mx-auto p-8">
      <div class="bg-white p-6 rounded-2xl shadow-sm">
        <h3 class="text-lg text-gray-700">
          Hello <%= locals.message || user.name %>
        </h3>
        <h2 class="text-2xl font-semibold text-gray-800 mt-2">
          Good Morning message
        </h2>
        <form action="/logout" method="POST" class="mt-4">
          <button
            type="submit"
            class="bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition"
          >
            Logout
          </button>
        </form>
      </div>
    </div>
    <% } else { %>

    <!-- Hero Section with Sign Up button -->
    <header class="bg-gradient-to-red from-blue-600 to-purple-600 text-white">
      <div class="max-w-6xl mx-auto px-6 py-20 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Discover Unique Treasures
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          Bid on amazing items from trusted sellers around the world
        </p>
        <a
          href="/role"
          class="inline-flex items-center gap-2 bg-white text-blue-600 hover:bg-gray-100 font-semibold px-8 py-4 rounded-full text-lg shadow-lg transition transform hover:scale-105"
        >
          <i data-lucide="user-plus" class="w-6 h-6"></i>
          Sign Up
        </a>
        <p class="mt-4 text-white/80">
          Already have an account?
          <a
            href="/login"
            class="text-white font-medium underline hover:no-underline"
            >Log in</a
          >
        </p>
      </div>
    </header>

    <!-- Features (unchanged) -->
    <section class="max-w-6xl mx-auto px-6 py-16">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">
        Why Join Our Auction?
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
          <div
            class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <i data-lucide="gem" class="w-8 h-8 text-blue-600"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Rare Finds</h3>
          <p class="text-gray-600">
            Discover unique collectibles, art, and vintage items you won't find
            anywhere else.
          </p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
          <div
            class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <i data-lucide="shield" class="w-8 h-8 text-blue-600"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Secure Bidding</h3>
          <p class="text-gray-600">
            Your transactions are protected with our secure payment and dispute
            resolution system.
          </p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
          <div
            class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <i data-lucide="users" class="w-8 h-8 text-blue-600"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Trusted Community</h3>
          <p class="text-gray-600">
            Join thousands of happy buyers and sellers in a vibrant, fair
            marketplace.
          </p>
        </div>
      </div>
    </section>

    <!-- Initialize Lucide Icons -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        lucide.createIcons();
      });
    </script>

    <% } %>
  </body>
</html>
