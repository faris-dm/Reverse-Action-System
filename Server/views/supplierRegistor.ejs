<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body
    class="bg-gradient-to-brown from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4"
  >
    <div
      class="bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-2xl max-w-md w-full border border-white/50"
    >
      <!-- Header with icon -->
      <div class="flex items-center gap-3 mb-2">
        <div class="p-2 bg-blue-100 rounded-xl">
          <i data-lucide="store" class="w-8 h-8 text-blue-600"></i>
        </div>
        <h2
          class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-red from-blue-700 to-purple-600"
        >
          Become a Supplier
        </h2>
      </div>
      <p class="text-gray-600 mt-1 text-lg">
        Start listing your products and reach thousands of buyers
      </p>

      <!-- Display error/success message if any -->
      <% if (locals.message) { %>
      <div
        class="mt-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-800 rounded-lg text-sm flex items-start gap-2 shadow-sm"
      >
        <i
          data-lucide="alert-circle"
          class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5"
        ></i>
        <span><%= message %></span>
      </div>
      <% } %>

      <!-- Registration Form -->
      <form action="/supplier" method="POST" class="mt-8 space-y-6">
        <!-- Full Name -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2"
            >Full Name</label
          >
          <div class="relative group">
            <i
              data-lucide="user"
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5 group-focus-within:text-blue-500 transition"
            ></i>
            <input
              type="text"
              name="name"
              placeholder="John Doe"
              required
              class="w-full border border-gray-300 rounded-xl pl-12 pr-4 py-3.5 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition bg-white/80 group-hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2"
            >Email</label
          >
          <div class="relative group">
            <i
              data-lucide="mail"
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5 group-focus-within:text-blue-500 transition"
            ></i>
            <input
              type="email"
              name="email"
              placeholder="you@example.com"
              required
              class="w-full border border-gray-300 rounded-xl pl-12 pr-4 py-3.5 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition bg-white/80 group-hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2"
            >password</label
          >
          <div class="relative group">
            <i
              data-lucide="lock"
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5 group-focus-within:text-blue-500 transition"
            ></i>
            <input
              type="password"
              name="password"
              placeholder="••••••••"
              required
              class="w-full border border-gray-300 rounded-xl pl-12 pr-4 py-3.5 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition bg-white/80 group-hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Confirm Password -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2"
            >Confirm Password</label
          >
          <div class="relative group">
            <i
              data-lucide="lock"
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5 group-focus-within:text-blue-500 transition"
            ></i>
            <input
              type="password"
              name="confirmPassword"
              placeholder="••••••••"
              required
              class="w-full border border-gray-300 rounded-xl pl-12 pr-4 py-3.5 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition bg-white/80 group-hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Business Name (supplier-specific) -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2"
            >Business Name</label
          >
          <div class="relative group">
            <i
              data-lucide="building"
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5 group-focus-within:text-blue-500 transition"
            ></i>
            <input
              type="text"
              name="businessName"
              placeholder="Your Company LLC"
              required
              class="w-full border border-gray-300 rounded-xl pl-12 pr-4 py-3.5 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition bg-white/80 group-hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Hidden role field (only one) -->
        <input type="hidden" name="role" value="supplier" />

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-slate-800 to-slate-900 hover:from-slate-900 hover:to-black text-white font-semibold py-4 px-4 rounded-xl transition duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          <i data-lucide="store" class="w-5 h-5"></i>
          Register as Supplier
        </button>
      </form>

      <!-- Login Link -->
      <p class="text-center text-gray-600 mt-8">
        Already have an account?
        <a
          href="/login"
          class="text-blue-700 hover:text-blue-900 font-semibold transition border-b border-blue-200 hover:border-blue-700"
        >
          Sign in
        </a>
      </p>
    </div>

    <!-- Initialize Lucide Icons -->
    <script>
      lucide.createIcons();
    </script>
  </body>
</html>
