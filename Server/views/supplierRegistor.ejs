<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-md w-full">
      <!-- Header with icon -->
      <div class="flex items-center gap-2 mb-2">
        <i data-lucide="store" class="w-8 h-8 text-blue-600"></i>
        <h2
          class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600"
        >
          Become a Supplier
        </h2>
      </div>
      <p class="text-gray-500 mt-1">
        Start listing your products and reach thousands of buyers
      </p>

      <!-- Display error/success message if any -->
      <% if (locals.message) { %>
      <div
        class="mt-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm"
      >
        <i data-lucide="alert-circle" class="inline w-4 h-4 mr-1"></i>
        <%= message %>
      </div>
      <% } %>

      <!-- Registration Form -->
      <form action="/supplier" method="POST" class="mt-6 space-y-5">
        <!-- Full Name -->
        <input type="hidden" name="role" value="supplier" />
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Full Name</label
          >
          <div class="relative">
            <i
              data-lucide="user"
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"
            ></i>
            <input
              type="text"
              name="name"
              placeholder="John Doe"
              required
              class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
          <input type="hidden" name="role" />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Email</label
          >
          <div class="relative">
            <i
              data-lucide="mail"
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"
            ></i>
            <input
              type="email"
              name="email"
              placeholder="you@example.com"
              required
              class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Password</label
          >
          <div class="relative">
            <i
              data-lucide="lock"
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"
            ></i>
            <input
              type="password"
              name="password"
              placeholder="••••••••"
              required
              class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
        </div>

        <!-- Confirm Password (optional but recommended) -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Confirm Password</label
          >
          <div class="relative">
            <i
              data-lucide="lock"
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"
            ></i>
            <input
              type="password"
              name="confirmPassword"
              placeholder="••••••••"
              required
              class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
        </div>

        <!-- Business Name (supplier-specific) -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Business Name</label
          >
          <div class="relative">
            <i
              data-lucide="building"
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"
            ></i>
            <input
              type="text"
              name="businessName"
              placeholder="Your Company LLC"
              required
              class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-slate-900 hover:bg-slate-800 text-white font-medium py-3 px-4 rounded-lg transition duration-200 flex items-center justify-center gap-2"
        >
          <i data-lucide="store" class="w-5 h-5"></i>
          Register as Supplier
        </button>
      </form>

      <!-- Login Link -->
      <p class="text-center text-gray-600 mt-6">
        Already have an account?
        <a
          href="/login"
          class="text-blue-600 hover:text-blue-800 font-medium transition"
        >
          Sign in
        </a>
      </p>
    </div>

    <!-- Initialize Lucide Icons -->
    <script>
      lucide.createIcons();
    </script>
  </body>
</html>
